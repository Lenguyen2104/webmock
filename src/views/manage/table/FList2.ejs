<body class="hold-transition sidebar-mini">
<!-- Main content -->
<section class="content">
    <div class="input-container" style="height: 40px;display: flex;justify-content: flex-end" >
        <input
                style="height:40px; width: 200px; border-radius: 7px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);padding-left: 10px; border: .02667rem solid #ababab;"
                data-v-0ff6946a=""
                type="date"
                placeholder="Chọn ngày"
                class="ipt"
                id="dateInput2"
        />
    </div>
    <!-- Default box -->
    <div class="card" style="margin-top: 10px">
        <div class="card-header">
            <h3 class="card-title">Danh sách F2</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0" style="overflow-y: hidden">
            <table class="table table-striped projects" id="table1">
                <thead>
                <tr>
                    <th class="text-center">SĐT</th>
                    <th class="text-center">Nạp đầu</th>
                    <th class="text-center">Số lần nạp</th>
                    <th class="text-center">Số dư</th>
                    <th class="text-center">Tổng tiền</th>
                    <th class="text-center">Tổng nạp</th>
                    <th class="text-center">Tổng rút</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-center">Ngày đăng ký</th>
                </tr>
                </thead>
                <tbody id="Flist2">
                <!-- #region -->
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation example" style="margin-top: 20px; display: flex; justify-content: center">
            <ul class="pagination table1">
                <li class="page-item previous" id="previous_f2">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <div id="numbers" style="display: flex">
                    <li class="page-item">
                        <a class="page-link active text-white" id="text-page_f2"></a>
                    </li>
                </div>
                <li class="page-item next" id="next_f2">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</section>
<link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
/>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://npmcdn.com/flatpickr/dist/flatpickr.min.js"></script>
<script src="/plugins/jquery/jquery.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/dist/js/adminlte.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
<!-- <script src="/js/admin/admin.js"></script>  -->
<script>

    let url2 = window.location.pathname;
    let phones2 = url2.split("/");
    let phone2 = phones2[phones2.length - 1];

    const currentDate2 = new Date();
    const day2 = String(currentDate2.getDate()).padStart(2, "0");
    const month2 = String(currentDate2.getMonth() + 1).padStart(2, "0");
    const year2 = currentDate2.getFullYear();
    const formattedDefaultDate2 = `${day2}-${month2}-${year2}`;
    document.getElementById("dateInput2").value = formattedDefaultDate2;
    flatpickr("#dateInput2", {
        dateFormat: "d-m-Y",
        altFormat: "d-m-Y",
        locale: "vn",
        weekNumbers: true,
        defaultDate: formattedDefaultDate2,
    });
    let selectedDate2 = $('#dateInput2').val();
    const convertDateTime2 = (timestamp) => {
        const date = new Date(+timestamp);
        const day = String(date.getDate()).padStart(2, '0');
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const year = String(date.getFullYear());
        const hours = String(date.getHours()).padStart(2, '0');
        const minutes = String(date.getMinutes()).padStart(2, '0');
        const seconds = String(date.getSeconds()).padStart(2, '0');

        const formattedDate = `${day}/${month}/${year} ${hours}:${minutes}:${seconds}`;
        return formattedDate;
    }

    const Render2 = (datas) => {
        let html = '';
        datas.map((data) => {
            html += `
          <tr class="text-center" style="">
          <td>${data.phone}</td>
          <td>
            ${data.first_recharge}
          </td>
          <td>
            ${data.rechargeCount}
          </td>
          <td>
            <b style="color: #2003db">${data.surplus}</b>
          </td>
          <td>
            ${data.total_amount}
          </td>
          <td class="project-state">
            ${data.total_recharge}
          </td>
          <td>
            ${data.total_withdrawal}
          </td>
          <td>
            ${(data.status == 1) ? '<span class="badge badge-success">Online</span>' : '<span class="badge badge-warning">Banded</span>'}
          </td>
          <td class="project-actions text-center" style="min-width: 100px">
            ${convertDateTime2(data.time)}
          </td>
        </tr>`;
            $("#Flist2").html(html);
        });
    }

    let f2_pageno = 1;
    let f2_limit = 30;
    let total_page_2 = 1;

    $("#dateInput2").change(function() {
        selectedDate2 = $(this).val(); // Loại bỏ từ khóa var
        $.ajax({
            type: "POST",
            url: "/api/webapi/admin/listF1",
            data: {
                typeid: "1",
                pageno: f2_pageno,
                limit: f2_limit,
                language: "vi",
                selectedDate: selectedDate2,
                phone: phone2
            },
            dataType: "json",
            success: function (response) {
                total_page_2 = response.f2s_page_total;
                $('#text-page_f2').text(f2_pageno + ' / ' + response.f2s_page_total);
                if (response.status === true) return Render2(response.f2sData);
            },
        });// Gọi fetchData với giá trị selectedDate
    });

    $.ajax({
        type: "POST",
        url: "/api/webapi/admin/listF1",
        data: {
            typeid: "1",
            pageno: f2_pageno,
            limit: f2_limit,
            language: "vi",
            selectedDate: selectedDate2,
            phone: phone2
        },
        dataType: "json",
        success: function (response) {
            total_page_2 = response.f2s_page_total;
            $('#text-page_f2').text(f2_pageno + ' / ' + response.f2s_page_total);
            if (response.status === true) return Render2(response.f2sData);
        },
    });

    $('#next_f2').click(function (e) {
        f2_pageno += 1;
        if(f2_pageno > total_page_2) {
            f2_pageno = total_page_2;
        }
        e.preventDefault();
        $.ajax({
            type: "POST",
            url: "/api/webapi/admin/listF1",
            data: {
                typeid: "1",
                pageno: f2_pageno,
                limit: f2_limit,
                selectedDate: selectedDate2,
                language: "vi",
                phone: phone2
            },
            dataType: "json",
            success: function (response) {
                if(f2_pageno === response.f2s_page_total) {
                    $('#next_f2').addClass('block-click');
                }
                $('#text-page_f2').text(f2_pageno + ' / ' + response.f2s_page_total);
                if (response.status === true) return Render2(response.f2sData);
            }
        });
    });

    $('#previous_f2').click(function (e) {
        e.preventDefault();
        $('#next_f2').removeClass('block-click');
        f2_pageno -= 1;
        if(f2_pageno < 1) return f2_pageno = 1;
        $.ajax({
            type: "POST",
            url: "/api/webapi/admin/listF1",
            data: {
                typeid: "1",
                pageno: f2_pageno,
                limit: f2_limit,
                selectedDate: selectedDate2,
                language: "vi",
                phone: phone2
            },
            dataType: "json",
            success: function (response) {
                $('#text-page_f2').text(f2_pageno + ' / ' + response.f2s_page_total);
                if (response.status === true) return Render2(response.f2sData);
            }
        });
    });
</script>
</body>

